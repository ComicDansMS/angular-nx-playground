{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@ngnx-playground/pipes/camel-case-pipe": [
        "libs/pipes/camel-case/src/index.ts"
      ],
      "@ngnx-playground/tools/automation": ["tools/automation/src/index.ts"],
      "@ngnx-playground/ui/components/button": [
        "libs/ui/components/button/src/index.ts"
      ],
      "@ngnx-playground/ui/components/card": [
        "libs/ui/components/src/index.ts"
      ],
      "@ngnx-playground/ui/components/form-field-error": [
        "libs/ui/components/form-field-error/src/index.ts"
      ],
      "@ngnx-playground/ui/components/input": [
        "libs/ui/components/input/src/index.ts"
      ],
      "@ngnx-playground/ui/components/input-form-field": [
        "libs/ui/components/input-form-field/src/index.ts"
      ],
      "@ngnx-playground/ui/components/label": [
        "libs/ui/components/label/src/index.ts"
      ],
      "@ngnx-playground/ui/components/radio-form-field": [
        "libs/ui/components/radio-form-field/src/index.ts"
      ],
      "@ngnx-playground/ui/core/abstract-styled-directive": [
        "libs/ui/core/abstracts/abstract-styled-directive/src/index.ts"
      ],
      "@ngnx-playground/ui/core/theme-service": [
        "libs/ui/core/theme-service/src/index.ts"
      ],
      "@ngnx-playground/ui/directives/control-value-accessor": [
        "libs/ui/directives/control-value-accessor/src/index.ts"
      ],
      "@ngnx-playground/ui/interfaces": ["libs/ui/core/interfaces/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
